# Kinitro Configuration
# Copy this file to .env and fill in your values

# NETWORK CONFIGURATION
# -----------------------------------------------------------------------------
NETWORK=finney              # finney (mainnet), test (testnet), or local
NETUID=                     # Your subnet's netuid (REQUIRED)

# WALLET CONFIGURATION (for validators)
# -----------------------------------------------------------------------------
WALLET_NAME=default         # Name of your Bittensor wallet
HOTKEY_NAME=default         # Name of your hotkey

# DATABASE CONFIGURATION (for backend)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kinitro

# API KEYS
# -----------------------------------------------------------------------------
BASILICA_API_TOKEN=""  # Token for Basilica policy deployment

# EXECUTOR AUTHENTICATION (required unless API started with --no-auth)
# -----------------------------------------------------------------------------
# Generate a key: python -c "import secrets; print(secrets.token_urlsafe(32))"
KINITRO_API_API_KEY=           # API server key (required for auth)
KINITRO_EXECUTOR_API_KEY=      # Executor key (must match API server key)

# EVALUATION SETTINGS
# -----------------------------------------------------------------------------
EPISODES_PER_ENV=50         # Episodes to run per environment per cycle
EVAL_INTERVAL=3600          # Seconds between evaluation cycles (1 hour)

# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR

# MONITORING (Optional)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
